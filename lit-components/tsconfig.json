{
   "compilerOptions": {
      "target": "es2019",
      "module": "es2020",
      "lib": [
         "es2020",
         "DOM",
         "DOM.Iterable"
      ],
      "strict": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "inlineSources": true,
      // "rootDir": "./src",
      // "noUnusedLocals": true,
      // "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "plugins": [
         {
            "name": "ts-lit-plugin",
            "strict": true
         }
      ],
      "noEmitOnError": true,
      "esModuleInterop": false,
      "strictPropertyInitialization": false,
      "importHelpers": true,
      "outDir": "dist",
      "baseUrl": "./",
      "incremental": true
   },
   "include": [
      "**/*.ts"
   ]
}